<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar"></include>

    <EditText
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/color_gray_smal"
        android:enabled="false"
        android:gravity="end|center"
        android:paddingRight="10dp"
        android:text="0.00"
        android:textColor="@color/color_balck"
        android:textSize="22dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linearLayout_update_paytype"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#E4E4E4"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pay_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/money"
            android:drawablePadding="3dp"
            android:duplicateParentState="true"
            android:gravity="center"
            android:text="微信"
            android:textColor="@drawable/pay_selector_selecotr"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:text="更改"
            android:textColor="@color/colorNormalClear"
            android:textSize="18dp" />
    </LinearLayout>

    <include layout="@layout/numkeyboard_view"></include>

</LinearLayout>
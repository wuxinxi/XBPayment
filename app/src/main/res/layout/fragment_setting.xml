<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/line_layout"
    android:orientation="vertical"
    android:showDividers="middle|end">

    <TextView
        android:id="@+id/version"
        style="@style/TextImageStyle"
        android:background="@drawable/text_selector"
        android:drawableLeft="@mipmap/icon_dangqianbanben"
        android:text="版本号" />

    <TextView
        android:id="@+id/checkUpdate"
        style="@style/TextImageStyle"
        android:background="@drawable/text_selector"
        android:drawableLeft="@mipmap/icon_soft_update"
        android:text="新版本检查" />

    <TextView
        android:id="@+id/phone"
        style="@style/TextImageStyle.Jiantou"
        android:background="@drawable/text_selector"
        android:drawableLeft="@mipmap/icon_phone"
        android:text="联系客服" />

    <TextView
        android:id="@+id/out"
        style="@style/TextImageStyle"
        android:background="@drawable/text_selector"
        android:drawableLeft="@mipmap/icon_out"
        android:text="退出程序" />
</LinearLayout>